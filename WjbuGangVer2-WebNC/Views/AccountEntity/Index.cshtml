@model IEnumerable<WjbuGangVer2_WebNC.Models.Account>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<style>
    .shortDisplay:hover {
        overflow: visible;
        white-space: pre-line;
        width: 500px;
        line-break: auto;
    }

    .shortDisplay {
        display: inline-block;
        max-width: 300px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
</style>

<h2>Danh Sách Tài Khoản</h2>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        <span class="shortDisplay"> @Html.DisplayFor(modelItem => item.DiaChi)</span>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SDT)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.NgaySinh)*@
        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.NgaySinh))
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role)
    </td>
    <td>
        @Html.ActionLink("Chi Tiết", "Details", new { id = item.AccountID }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.AccountID })
    </td>
</tr>}
    </table>
</div>