@model IEnumerable<WjbuGangVer2_WebNC.Models.LoaiMH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div >
    <h2>Danh sách loại mặt hàng</h2>
    <div>
        <p>
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenLoai)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="Search">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaLoai }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
