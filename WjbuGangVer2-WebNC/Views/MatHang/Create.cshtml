                    @Html.DropDownListFor(model => model.Hang, new SelectList(ViewBag.list),"Chọn Hãng", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hang, "", new { @class = "text-danger" })

