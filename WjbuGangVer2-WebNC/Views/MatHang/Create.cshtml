@model WjbuGangVer2_WebNC.Models.MatHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-left:150px; margin-top:50px">
    <h2>Thêm Mặt Hàng</h2>
    <div style="margin-left:100px">
        @using (Html.BeginForm("Create", "MatHang",FormMethod.Post,new {enctype = "multipart/form-data" }))
